{
  "kind": "singleType",
  "collectionName": "hero_banner",
  "info": {
    "singularName": "hero-banner",
    "pluralName": "hero-banners",
    "displayName": "Hero Banner",
    "description": "Homepage hero banner - fully customizable headline, background, and CTA button"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "headline": {
      "type": "text",
      "required": true,
      "default": "Semua Berawal\nDari Rumah\ndengan desain interior yang personal dan fungsional."
    },
    "headline_font_size_mobile": {
      "type": "string",
      "required": false,
      "default": "48px",
      "regex": "^\\d+px$"
    },
    "headline_font_size_tablet": {
      "type": "string",
      "required": false,
      "default": "88px",
      "regex": "^\\d+px$"
    },
    "headline_font_size_desktop": {
      "type": "string",
      "required": false,
      "default": "128px",
      "regex": "^\\d+px$"
    },
    "background": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "cta_text": {
      "type": "string",
      "required": true,
      "default": "Mulai Konsultasi"
    },
    "cta_type": {
      "type": "enumeration",
      "enum": ["whatsapp", "internal_page"],
      "default": "whatsapp",
      "required": true
    },
    "cta_page_url": {
      "type": "string",
      "default": "/hubungi-kami"
    }
  }
}
