---
interface Props {
  title: string;
  category: string;
  image: string;
  slug: string;
  location?: string;
  area?: string;
  style?: string;
}

const { title, category, image, slug, location, area, style } = Astro.props;
---

<article class="group h-full">
  <a href={`/portfolio/${slug}`} class="block h-full">
    <!-- Image Container - Taller aspect ratio -->
    <div class="relative overflow-hidden rounded-[20px] aspect-[3/4]">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110"
      />

      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent transition-all duration-500"></div>

      <!-- Category Badge - Top left -->
      <div class="absolute top-5 left-5">
        <span class="inline-block px-4 py-2 text-[11px] font-medium text-white bg-white/15 backdrop-blur-md rounded-full uppercase tracking-wider border border-white/20">
          {category}
        </span>
      </div>

      <!-- Content Overlay - Anchored to bottom -->
      <div class="absolute inset-x-0 bottom-0 p-5 flex flex-col justify-end">
        <!-- Title -->
        <h3 class="text-[22px] font-medium text-white mb-2 leading-tight transition-transform duration-500 ease-out group-hover:-translate-y-2">
          {title}
        </h3>

        <!-- Info Row - Compact -->
        <div class="flex flex-wrap items-center gap-3 text-[12px] text-white/80 transition-transform duration-500 ease-out group-hover:-translate-y-2">
          {location && (
            <span class="flex items-center gap-1">
              <svg class="w-3.5 h-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              {location}
            </span>
          )}
          {area && (
            <span class="flex items-center gap-1">
              <svg class="w-3.5 h-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
              </svg>
              {area}
            </span>
          )}
          {style && (
            <span class="flex items-center gap-1">
              <svg class="w-3.5 h-3.5 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
              </svg>
              {style}
            </span>
          )}
        </div>

        <!-- View Button - Hidden, shows on hover -->
        <div class="h-0 overflow-hidden opacity-0 group-hover:h-auto group-hover:opacity-100 group-hover:mt-3 transition-all duration-400 ease-out">
          <span class="inline-flex items-center gap-2 text-[13px] font-medium text-white">
            Lihat Project
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </span>
        </div>
      </div>
    </div>
  </a>
</article>
