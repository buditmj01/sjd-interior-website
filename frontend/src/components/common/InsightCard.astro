---
interface Props {
  title: string;
  author: string;
  authorPhoto?: string;
  date: string;
  category: string;
  image: string;
  slug: string;
}

const { title, author, authorPhoto, date, category, image, slug } = Astro.props;
---

<article class="group h-full">
  <a href={`/insight/${slug}`} class="block h-full">
    <!-- Mobile: Horizontal card | Tablet+: Vertical card -->
    <div class="flex flex-row md:flex-col h-[116px] md:h-full bg-white border border-[#e5e5e5] rounded-[10px] md:rounded-[14px] overflow-hidden transition-all duration-500 ease-out group-hover:-translate-y-2 group-hover:shadow-[0_20px_50px_rgba(0,0,0,0.1)] group-hover:border-black/10">
      <!-- Image -->
      <div class="w-[116px] flex-shrink-0 md:w-full overflow-hidden relative">
        <img
          src={image}
          alt={title}
          class="w-full h-full md:h-auto md:aspect-[3/2] object-cover transition-transform duration-700 ease-out group-hover:scale-110"
        />
        <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-500"></div>
      </div>

      <!-- Content -->
      <div class="flex-1 p-2.5 md:p-4 lg:p-6 flex flex-col min-w-0 bg-white">
        <!-- Author -->
        <div class="flex items-center gap-1.5 md:gap-2 mb-1 md:mb-2 lg:mb-3">
          <div class="w-4 h-4 md:w-5 md:h-5 lg:w-6 lg:h-6 rounded-full bg-gray-100 overflow-hidden flex-shrink-0 border border-black/5">
            {authorPhoto ? (
              <img src={authorPhoto} alt={author} class="w-full h-full object-cover" />
            ) : (
              <svg class="w-full h-full" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="14" cy="14" r="13" stroke="#969696" stroke-width="1.5"/>
                <circle cx="14" cy="11" r="4.5" stroke="#969696" stroke-width="1.5"/>
                <path d="M5.5 24C5.5 20.134 8.63401 17 12.5 17H15.5C19.366 17 22.5 20.134 22.5 24" stroke="#969696" stroke-width="1.5"/>
              </svg>
            )}
          </div>
          <span class="text-[9px] md:text-[11px] lg:text-[13px] font-normal text-[#969696] leading-tight truncate transition-colors duration-300 group-hover:text-[#666]">
            {author}
          </span>
        </div>

        <!-- Title -->
        <h3 class="text-[12px] md:text-[15px] lg:text-[20px] font-light text-[#222] leading-[1.3] tracking-tight line-clamp-2 md:line-clamp-3 flex-1 transition-colors duration-300 group-hover:text-black">
          {title}
        </h3>

        <!-- Category & Date -->
        <div class="flex items-center gap-1.5 md:gap-2 mt-auto flex-wrap pt-2">
          <span class="inline-flex px-1.5 py-0.5 md:px-2.5 md:py-1 text-[7px] md:text-[10px] lg:text-[11px] font-medium text-black uppercase border border-[#5e5151] rounded-full leading-none transition-all duration-300 group-hover:bg-black group-hover:text-white group-hover:border-black">
            {category}
          </span>
          <span class="text-[8px] md:text-[11px] lg:text-[14px] font-light text-[#2b2b2b] leading-tight">
            {date}
          </span>
        </div>
      </div>
    </div>
  </a>
</article>
