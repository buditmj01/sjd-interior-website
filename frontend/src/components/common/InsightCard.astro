---
interface Props {
  title: string;
  author: string;
  date: string;
  category: string;
  image: string;
  slug: string;
}

const { title, author, date, category, image, slug } = Astro.props;
---

<article class="group">
  <a href={`/insight/${slug}`} class="block">
    <!-- Image Container - proportional height based on ~317px for ~471px width = aspect ratio ~1.48:1 -->
    <div class="overflow-hidden rounded-t-[14px] aspect-[471/317]">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>

    <!-- Content Container - ~249px height for ~471px width -->
    <div class="bg-white border border-black/50 rounded-b-[14px] p-8 min-h-[249px] flex flex-col">
      <!-- Author -->
      <div class="flex items-center gap-3 mb-4">
        <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg" class="flex-shrink-0">
          <circle cx="14" cy="14" r="13" stroke="#969696" stroke-width="1.5"/>
          <circle cx="14" cy="11" r="4.5" stroke="#969696" stroke-width="1.5"/>
          <path d="M5.5 24C5.5 20.134 8.63401 17 12.5 17H15.5C19.366 17 22.5 20.134 22.5 24" stroke="#969696" stroke-width="1.5"/>
        </svg>
        <span class="text-[13.18px] font-normal text-[#969696]" style="letter-spacing: -0.66px; line-height: 1.235;">
          {author}
        </span>
      </div>

      <!-- Title -->
      <h3 class="text-[26.49px] font-light text-[#222222] leading-[1.235] mb-auto" style="letter-spacing: -1.32px;">
        {title}
      </h3>

      <!-- Category & Date -->
      <div class="flex items-center gap-4 mt-4">
        <div class="flex items-center justify-center px-[10px] py-[8px] border-2 border-[#5e5151] rounded-[22.5px]">
          <span class="text-[12.31px] font-medium text-black leading-none">
            {category}
          </span>
        </div>
        <span class="text-[16.66px] font-light text-[#2b2b2b]" style="letter-spacing: -0.83px; line-height: 98.83%;">
          {date}
        </span>
      </div>
    </div>
  </a>
</article>
