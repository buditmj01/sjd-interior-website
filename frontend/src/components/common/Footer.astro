        <!-- Contact Info -->
        <div class="space-y-4">
          <!-- Phone -->
          <a href="tel:+6285398989810" class="flex items-center gap-3 text-[15px] text-[#a1a1a1] hover:text-white transition-colors">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
