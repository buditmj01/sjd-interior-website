---
const currentYear = new Date().getFullYear();

// Matching Figma design footer structure
const sitemapLinks = [
  { label: 'Beranda', href: '/' },
  { label: 'Alur Kerja', href: '/alur-kerja' },
  { label: 'Portofolio', href: '/portfolio' },
  { label: 'Insight', href: '/insight' },
];

const clientLinks = [
  { label: 'FAQ', href: '#faq' },
  { label: 'Kontak', href: '/hubungi-kami' },
];

const socialLinks = [
  { label: 'Instagram', href: 'https://instagram.com' },
  { label: 'Youtube', href: 'https://youtube.com' },
  { label: 'TikTok', href: 'https://tiktok.com' },
];
---

<footer class="bg-[#202020] text-white">
  <div class="bg-[#fdfdf7] py-0">
    <div class="container mx-auto max-w-[1440px]"></div>
  </div>
  
  <div class="container mx-auto max-w-[1440px] py-12 md:py-16 lg:py-20">
    {/* Main Footer Content - 3 columns matching Figma */}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12 lg:gap-16">
      {/* Column 1: Sitemap */}
      <div>
        <h4 class="text-[32px] font-normal mb-3" style="letter-spacing: -1.6px;">
          Sitemap
        </h4>
        <ul class="space-y-3">
          {sitemapLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-[32px] font-normal leading-relaxed hover:opacity-70 transition-opacity"
                style="letter-spacing: -1.6px;"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Column 2: Clients */}
      <div>
        <h4 class="text-[32px] font-normal mb-3" style="letter-spacing: -1.6px;">
          Clients
        </h4>
        <ul class="space-y-3">
          {clientLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-[32px] font-normal leading-relaxed hover:opacity-70 transition-opacity"
                style="letter-spacing: -1.6px;"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Column 3: Social */}
      <div>
        <h4 class="text-[32px] font-normal mb-3" style="letter-spacing: -1.6px;">
          Social
        </h4>
        <ul class="space-y-3">
          {socialLinks.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-[32px] font-normal leading-relaxed hover:opacity-70 transition-opacity"
                style="letter-spacing: -1.6px;"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Column 4: Empty */}
      <div></div>
    </div>

    {/* Bottom Footer - Copyright */}
    <div class="mt-12 md:mt-16 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <p class="text-[20px] font-light text-[#a1a1a1]" style="letter-spacing: -1px;">
        Â© {currentYear} SJD Interior Studio
      </p>
      <p class="text-[20px] font-light text-[#a1a1a1]" style="letter-spacing: -1px;">
        Website Developed by LIETRIA Studio
      </p>
    </div>
  </div>
</footer>
