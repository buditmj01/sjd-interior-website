---
interface Props {
  title: string;
  image: string;
  category?: string;
  href?: string;
  featured?: boolean;
}

const { title, image, category, href = '#', featured = false } = Astro.props;
---

<a
  href={href}
  class:list={[
    'group block overflow-hidden rounded-lg bg-gray-100 transition-all duration-300 hover:shadow-xl hover:-translate-y-1',
    featured ? 'aspect-[4/5]' : 'aspect-[4/3]'
  ]}
>
  {/* Image Container */}
  <div class="relative w-full h-full overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />

    {/* Overlay */}
    <div class="absolute inset-0 bg-gradient-to-t from-dark/80 via-dark/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <div class="absolute bottom-0 left-0 right-0 p-4 md:p-6 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
        {/* Category Badge */}
        {category && (
          <span class="inline-block px-3 py-1 bg-primary text-white text-xs md:text-sm font-medium rounded-full mb-2">
            {category}
          </span>
        )}

        {/* Title */}
        <h3 class="text-white font-bold text-lg md:text-xl lg:text-2xl">
          {title}
        </h3>

        {/* View Details */}
        <div class="flex items-center gap-2 mt-2 text-white/90 text-sm">
          <span>Lihat Detail</span>
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>
    </div>
  </div>
</a>
