---
import '../styles/global.css';
import { getWebsiteLogos } from '../lib/getWebsiteLogos.js';
import { getSiteSettings } from '../lib/getSiteSettings.js';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  jsonLd?: Record<string, any>;
}

const logosData = await getWebsiteLogos();
const logos = logosData?.attributes?.websiteLogos || {};

const siteSettingsData = await getSiteSettings();
const defaultSiteName = siteSettingsData?.siteName || 'SJD Interior Design';
const defaultSiteDescription = siteSettingsData?.siteDescription || 'Professional interior design services';

const {
  title = defaultSiteName,
  description = defaultSiteDescription,
  ogImage,
  jsonLd
} = Astro.props;

const ogImageUrl = ogImage || '/images/cta-background.png';

// Use favicon if uploaded, otherwise use header logo, fallback to default
const STRAPI_URL = import.meta.env.PUBLIC_STRAPI_URL || 'http://localhost:1337';
const faviconUrl = logos.favicon?.data?.attributes?.url
  ? `${STRAPI_URL}${logos.favicon.data.attributes.url}`
  : logos.logo?.data?.attributes?.url
    ? `${STRAPI_URL}${logos.logo.data.attributes.url}`
    : logos.logoLight?.data?.attributes?.url
      ? `${STRAPI_URL}${logos.logoLight.data.attributes.url}`
      : '/favicon.svg';
const faviconType = logos.favicon?.data?.attributes?.mime || logos.logo?.data?.attributes?.mime || logos.logoLight?.data?.attributes?.mime || 'image/svg+xml';
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="author" content="SJD Interior Design" />

    <!-- Google Analytics -->
    {import.meta.env.PUBLIC_GA_ID && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}></script>
        <script is:inline define:vars={{ gaId: import.meta.env.PUBLIC_GA_ID }}>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', gaId);
        </script>
      </>
    )}

    <link rel="icon" type={faviconType} href={faviconUrl} />
    <link rel="canonical" href={Astro.url.href} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImageUrl, Astro.url)} />
    <meta property="og:locale" content="id_ID" />
    <meta property="og:site_name" content={defaultSiteName} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImageUrl, Astro.url)} />

    <!-- Preconnect to improve performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Font - Lexend -->
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Structured Data - WebSite -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "SJD Interior Design",
        "url": "https://sjdinterior.com",
        "inLanguage": "id-ID"
      }
    </script>

    <!-- Structured Data - LocalBusiness -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "InteriorDesignBusiness",
        "name": "SJD Interior Design",
        "image": "https://sjdinterior.com/images/cta-background.png",
        "@id": "https://sjdinterior.com/#business",
        "url": "https://sjdinterior.com",
        "telephone": "+6285398989810",
        "priceRange": "$$",
        "description": "Jasa desain interior profesional di Jabodetabek. Konsultasi, desain 3D, produksi furniture custom, hingga serah terima.",
        "areaServed": {
          "@type": "GeoCircle",
          "geoMidpoint": {
            "@type": "GeoCoordinates",
            "latitude": -6.2345,
            "longitude": 106.6789
          },
          "geoRadius": "60000"
        },
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Gading Serpong",
          "addressLocality": "Tangerang",
          "postalCode": "15810",
          "addressRegion": "Banten",
          "addressCountry": "ID"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": -6.2345,
          "longitude": 106.6789
        },
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"],
          "opens": "09:00",
          "closes": "17:00"
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "5.0",
          "reviewCount": "16",
          "bestRating": "5"
        },
        "sameAs": [
          "https://www.instagram.com/sjd.interior/"
        ]
      }
    </script>

    {jsonLd && (
      <script type="application/ld+json" is:inline set:html={JSON.stringify(jsonLd)} />
    )}
  </head>
  <body class="antialiased">
    <slot />

    <!-- Lenis Smooth Scroll & Content Protection -->
    <script>
      import { initSmoothScroll, destroySmoothScroll } from '../scripts/scroll-init';
      
      // Initialize smooth scroll when DOM is ready
      let lenisInstance: ReturnType<typeof initSmoothScroll> = null;

      // Anti-Copy & Image Protection
      const initProtection = () => {
        // Disable right-click on images and the whole body if needed
        document.addEventListener('contextmenu', (e) => {
          if ((e.target as HTMLElement).tagName === 'IMG') {
            e.preventDefault();
            return false;
          }
        });

        // Disable dragging of images
        document.addEventListener('dragstart', (e) => {
          if ((e.target as HTMLElement).tagName === 'IMG') {
            e.preventDefault();
            return false;
          }
        });
      };

      // Smooth scroll for hash links
      const initHashScroll = (lenis: any) => {
        if (!lenis) return;

        // Handle click on hash links
        document.addEventListener('click', (e) => {
          const target = e.target as HTMLElement;
          const link = target.closest('a');
          
          if (!link) return;

          const href = link.getAttribute('href');
          if (!href || !href.includes('#')) return;

          const [url, hash] = href.split('#');
          const currentUrl = window.location.pathname;

          // If it's an internal hash link on the same page
          if (url === '' || url === currentUrl || (url === '/' && currentUrl === '/')) {
            const targetElement = document.getElementById(hash);
            if (targetElement) {
              e.preventDefault();
              lenis.scrollTo(targetElement, {
                offset: -100, // Offset for fixed header
                duration: 1.5,
                easing: (t: number) => Math.min(1, 1.001 - Math.pow(2, -10 * t))
              });
              // Update URL without jump
              history.pushState(null, '', `#${hash}`);
            }
          }
        });

        // Handle initial load with hash
        if (window.location.hash) {
          const hash = window.location.hash.substring(1);
          const targetElement = document.getElementById(hash);
          if (targetElement) {
            // Small delay to ensure layout is ready
            setTimeout(() => {
              lenis.scrollTo(targetElement, {
                offset: -100,
                duration: 1,
                immediate: false
              });
            }, 500);
          }
        }
      };

      // Mark animations as loaded to prevent FOUC
      const markAnimationsLoaded = () => {
        // Small delay to ensure GSAP is ready
        setTimeout(() => {
          document.body.classList.add('animations-loaded');
        }, 100);
      };

      // Initialize on page load
      document.addEventListener('DOMContentLoaded', () => {
        lenisInstance = initSmoothScroll();
        markAnimationsLoaded();
        initProtection();
        initHashScroll(lenisInstance);
      });

      // Cleanup on page unload (for Astro view transitions)
      document.addEventListener('astro:before-preparation', () => {
        if (lenisInstance) {
          destroySmoothScroll(lenisInstance);
          lenisInstance = null;
        }
        document.body.classList.remove('animations-loaded');
      });

      // Re-initialize after Astro page transitions
      document.addEventListener('astro:page-load', () => {
        lenisInstance = initSmoothScroll();
        markAnimationsLoaded();
        initProtection();
        initHashScroll(lenisInstance);
      });
    </script>

    <style is:global>
      /* Global Anti-Copy Protection */
      body {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      /* Allow selection in form elements */
      input, textarea, [contenteditable="true"] {
        -webkit-user-select: text;
        -moz-user-select: text;
        -ms-user-select: text;
        user-select: text;
      }

      /* Protect images specifically */
      img {
        -webkit-user-drag: none;
        -khtml-user-drag: none;
        -moz-user-drag: none;
        -o-user-drag: none;
        user-drag: none;
        pointer-events: auto; /* Keep hover effects working */
      }
    </style>
  </body>
</html>
