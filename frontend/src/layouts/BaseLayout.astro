---
import '../styles/global.css';
import { getWebsiteLogos } from '../lib/getWebsiteLogos.js';
import { getSiteSettings } from '../lib/getSiteSettings.js';

interface Props {
  title?: string;
  description?: string;
}

const logosData = await getWebsiteLogos();
const logos = logosData?.attributes?.websiteLogos || {};

const siteSettingsData = await getSiteSettings();
const defaultSiteName = siteSettingsData?.siteName || 'SJD Interior Design';
const defaultSiteDescription = siteSettingsData?.siteDescription || 'Professional interior design services';

const {
  title = defaultSiteName,
  description = defaultSiteDescription
} = Astro.props;

// Use favicon if uploaded, otherwise use header logo, fallback to default
const STRAPI_URL = import.meta.env.PUBLIC_STRAPI_URL || 'http://localhost:1337';
const faviconUrl = logos.favicon?.data?.attributes?.url
  ? `${STRAPI_URL}${logos.favicon.data.attributes.url}`
  : logos.logo?.data?.attributes?.url
    ? `${STRAPI_URL}${logos.logo.data.attributes.url}`
    : logos.logoLight?.data?.attributes?.url
      ? `${STRAPI_URL}${logos.logoLight.data.attributes.url}`
      : '/favicon.svg';
const faviconType = logos.favicon?.data?.attributes?.mime || logos.logo?.data?.attributes?.mime || logos.logoLight?.data?.attributes?.mime || 'image/svg+xml';
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type={faviconType} href={faviconUrl} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="id_ID" />

    <!-- Preconnect to improve performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Font - Lexend -->
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="antialiased">
    <slot />

    <!-- Lenis Smooth Scroll Initialization -->
    <script>
      import { initSmoothScroll, destroySmoothScroll } from '../scripts/scroll-init';
      
      // Initialize smooth scroll when DOM is ready
      let lenisInstance: ReturnType<typeof initSmoothScroll> = null;

      // Mark animations as loaded to prevent FOUC
      const markAnimationsLoaded = () => {
        // Small delay to ensure GSAP is ready
        setTimeout(() => {
          document.body.classList.add('animations-loaded');
        }, 100);
      };

      // Initialize on page load
      document.addEventListener('DOMContentLoaded', () => {
        lenisInstance = initSmoothScroll();
        markAnimationsLoaded();
      });

      // Cleanup on page unload (for Astro view transitions)
      document.addEventListener('astro:before-preparation', () => {
        if (lenisInstance) {
          destroySmoothScroll(lenisInstance);
          lenisInstance = null;
        }
        document.body.classList.remove('animations-loaded');
      });

      // Re-initialize after Astro page transitions
      document.addEventListener('astro:page-load', () => {
        lenisInstance = initSmoothScroll();
        markAnimationsLoaded();
      });
    </script>
  </body>
</html>
