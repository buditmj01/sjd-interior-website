---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/common/Header.astro';
import Footer from '../../components/common/Footer.astro';
import CTASection from '../../components/common/CTASection.astro';
import FAQSection from '../../components/common/FAQSection.astro';
import PortfolioCard from '../../components/common/PortfolioCard.astro';
import { getProjects, getImageUrl } from '../../lib/strapi';

// Fetch projects from Strapi
let portfolios = [];
try {
  const response = await getProjects({ 'pagination[limit]': 12 });
  portfolios = response.data?.map((project) => ({
    title: project.attributes.title,
    category: project.attributes.category.toUpperCase(),
    location: project.attributes.location || 'Indonesia',
    area: project.attributes.area_size || '-',
    style: 'Modern',
    image: getImageUrl(project.attributes.featured_image, 'medium') || '/images/insight-card.jpg',
    slug: project.attributes.slug
  })) || [];
} catch (error) {
  console.error('Error fetching projects:', error);
  // Fallback to mock data if Strapi fails
  portfolios = Array(6).fill(null).map(() => ({
    title: "Modern Tropical House",
    category: "RUMAH TINGGAL",
    location: "Jakarta Selatan",
    area: "350 mÂ²",
    style: "Modern Minimalis",
    image: "/images/insight-card.jpg",
    slug: "modern-tropical-house"
  }));
}
---

<BaseLayout
  title="Portfolio - SJD Interior"
  description="Lihat koleksi proyek interior terbaik dari SJD Interior"
>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-16 md:pb-20 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <h1 class="text-[128px] font-light text-black mb-12" style="letter-spacing: -6.40px; line-height: 98.83%;">
          Koleksi Karya Pilihan Kami.
        </h1>
      </div>
    </section>

    <!-- Filter Buttons -->
    <section class="py-8 bg-white border-b border-[#e5e5e5]">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <div class="flex gap-4 items-center justify-center">
          <button class="px-6 py-3 border-2 border-[#5e5151] text-black font-medium rounded-full hover:bg-black hover:text-white transition-all">
            Semua
          </button>
          <button class="px-6 py-3 border-2 border-[#5e5151] text-black font-medium rounded-full hover:bg-black hover:text-white transition-all">
            Rumah
          </button>
          <button class="px-6 py-3 border-2 border-[#5e5151] text-black font-medium rounded-full hover:bg-black hover:text-white transition-all">
            Kantor
          </button>
          <button class="px-6 py-3 border-2 border-[#5e5151] text-black font-medium rounded-full hover:bg-black hover:text-white transition-all">
            Komersial
          </button>
        </div>
      </div>
    </section>

    <!-- Portfolio Grid -->
    <section class="py-12 md:py-16 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          {portfolios.map((portfolio) => (
            <PortfolioCard {...portfolio} />
          ))}
        </div>

        <div class="flex justify-center items-center gap-2 mb-8">
          <div class="w-2 h-2 bg-black rounded-full"></div>
          <div class="w-2 h-2 bg-gray-300 rounded-full"></div>
          <div class="w-2 h-2 bg-gray-300 rounded-full"></div>
          <div class="w-2 h-2 bg-gray-300 rounded-full"></div>
          <div class="w-2 h-2 bg-gray-300 rounded-full"></div>
          <div class="w-2 h-2 bg-gray-300 rounded-full"></div>
        </div>

        <div class="text-center mb-12">
          <button class="px-8 py-3 border-2 border-[#5e5151] text-black font-medium rounded-full hover:bg-black hover:text-white transition-all">
            Next
          </button>
        </div>

        <!-- Stats Section -->
        <div class="border-t border-[#e5e5e5] pt-12 grid grid-cols-4 gap-6">
          <div class="border-2 border-black rounded-[35px] p-6 text-center flex flex-col items-center justify-center w-full aspect-square">
            <p class="text-[56px] font-light text-black mb-2" style="letter-spacing: -3.95px;">100+</p>
            <p class="text-[18px] font-light text-black" style="letter-spacing: -1.4px;">Proyek Selesai</p>
          </div>
          <div class="border-2 border-black rounded-[35px] p-6 text-center flex flex-col items-center justify-center w-full aspect-square">
            <p class="text-[56px] font-light text-black mb-2" style="letter-spacing: -3.95px;">7+</p>
            <p class="text-[18px] font-light text-black" style="letter-spacing: -1.4px;">Tahun Pengalaman</p>
          </div>
          <div class="border-2 border-black rounded-[35px] p-6 text-center flex flex-col items-center justify-center w-full aspect-square">
            <p class="text-[56px] font-light text-black mb-2" style="letter-spacing: -3.95px;">98%</p>
            <p class="text-[18px] font-light text-black" style="letter-spacing: -1.4px;">Klien Puas</p>
          </div>
          <div class="border-2 border-black rounded-[35px] p-6 text-center flex flex-col items-center justify-center w-full aspect-square">
            <p class="text-[56px] font-light text-black mb-2" style="letter-spacing: -3.95px;">25+</p>
            <p class="text-[18px] font-light text-black" style="letter-spacing: -1.4px;">Kota di Indonesia</p>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <FAQSection />

    <!-- CTA Section -->
    <CTASection />
  </main>

  <Footer />
</BaseLayout>
