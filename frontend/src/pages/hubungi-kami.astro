---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import CTASection from '../components/common/CTASection.astro';
import { getContactInfo } from '../lib/getContactInfo.js';
import { sanitizeText } from '../lib/sanitize.js';

// Fetch contact info from Strapi
const contactData = await getContactInfo();

// Default fallback data
const defaultContact = {
  phone: '+62 853-9898-9810',
  whatsapp_number: '6285398989810',
  email: 'hello@sjdinterior.com',
  address: 'Bogor Outer Ring Rd Blok Mulia 1 No.55\nCibuluh, Bogor Utara, Bogor 16151',
  working_hours: 'Senin - Sabtu: 09:00 - 18:00\nMinggu: Tutup',
  google_maps_url: 'https://www.google.com/maps/place/SJD+Interior/@-6.554956,106.8162471,17z/data=!3m1!4b1!4m6!3m5!1s0x2e69c700289557a1:0x8c45e67698b256f5!8m2!3d-6.554956!4d106.818822!16s%2Fg%2F11yn9lqlfy',
  google_maps_embed: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3965.6835!2d106.8162471!3d-6.554956!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e69c700289557a1%3A0x8c45e67698b256f5!2sSJD%20Interior!5e0!3m2!1sen!2sid!4v1706270400000'
};

// Use Strapi data if available, otherwise use default
const contactRaw = contactData?.attributes || defaultContact;

// Extract iframe src from google_maps_embed if it contains full iframe HTML
let mapsEmbedUrl = contactRaw.google_maps_embed;
if (mapsEmbedUrl && mapsEmbedUrl.includes('<iframe')) {
  // Extract src URL from iframe tag
  const srcMatch = mapsEmbedUrl.match(/src="([^"]+)"/);
  if (srcMatch) {
    mapsEmbedUrl = srcMatch[1];
  }
}

const contact = {
  ...contactRaw,
  google_maps_embed: mapsEmbedUrl
};
---

<BaseLayout
  title="Hubungi Kami - SJD Interior"
  description="Hubungi kami untuk konsultasi gratis proyek interior Anda"
>
  <Header />
  
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative pt-32 md:pt-40 lg:pt-44 pb-10 md:pb-16 lg:pb-20 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-6 md:px-12 lg:px-[151px]">
        <div class="text-center mb-8 md:mb-10 lg:mb-12">
          <p class="text-[18px] md:text-[28px] lg:text-[36px] font-light text-[#848484] mb-2 md:mb-3 lg:mb-4" style="letter-spacing: -0.90px; md:letter-spacing: -1.40px; lg:letter-spacing: -1.80px;">
            Hubungi Kami
          </p>
          <h1 class="text-[42px] md:text-[88px] lg:text-[128px] font-light text-black leading-tight" style="letter-spacing: -2.10px; md:letter-spacing: -4.40px; lg:letter-spacing: -6.40px;">
            Wujudkan Interior<br class="hidden md:block" /> Impian Anda
          </h1>
        </div>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="py-8 md:py-10 lg:py-12 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-6 md:px-12 lg:px-[151px]">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 md:gap-12 lg:gap-[60px]">
          <!-- Contact Form -->
          <div>
            <h2 class="text-[32px] md:text-[36px] lg:text-[40px] font-light text-black mb-2 md:mb-3" style="letter-spacing: -1.60px; md:letter-spacing: -1.80px; lg:letter-spacing: -2px;">
              Mulai Proyek Anda
            </h2>
            <p class="text-[16px] md:text-[17px] lg:text-[18px] font-light text-[#636363] mb-6 md:mb-7 lg:mb-8">
              Isi form di bawah ini dan tim kami akan segera menghubungi Anda.
            </p>
            <form id="contact-form" class="space-y-4 md:space-y-5">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-4">
                <div>
                  <label class="block text-[16px] md:text-[17px] lg:text-[18px] font-normal text-[#212121] mb-1.5 md:mb-2">
                    Nama Awal
                  </label>
                  <input
                    type="text"
                    id="nama-awal"
                    placeholder="Budi"
                    class="w-full px-3 md:px-4 py-2.5 md:py-3 text-[15px] md:text-[16px] font-light text-[#333] placeholder:font-light placeholder:text-[#c4c4c4] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
                <div>
                  <label class="block text-[16px] md:text-[17px] lg:text-[18px] font-normal text-[#212121] mb-1.5 md:mb-2">
                    Nama Akhir <span class="text-[13px] md:text-[14px] font-light text-[#999]">(Opsional)</span>
                  </label>
                  <input
                    type="text"
                    id="nama-akhir"
                    placeholder="Santoso"
                    class="w-full px-3 md:px-4 py-2.5 md:py-3 text-[15px] md:text-[16px] font-light text-[#333] placeholder:font-light placeholder:text-[#c4c4c4] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
              </div>

              <div>
                <label class="block text-[16px] md:text-[17px] lg:text-[18px] font-normal text-[#212121] mb-1.5 md:mb-2">
                  Estimasi Budget
                </label>
                <input
                  type="text"
                  id="budget"
                  inputmode="numeric"
                  placeholder="Rp 150.000.000"
                  class="w-full px-3 md:px-4 py-2.5 md:py-3 text-[15px] md:text-[16px] font-light text-[#333] placeholder:font-light placeholder:text-[#c4c4c4] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                />
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-4">
                <div>
                  <label class="block text-[16px] md:text-[17px] lg:text-[18px] font-normal text-[#212121] mb-1.5 md:mb-2">
                    Kapan Ingin Mulai
                  </label>
                  <input
                    type="date"
                    id="tanggal-mulai"
                    class="w-full px-3 md:px-4 py-2.5 md:py-3 text-[15px] md:text-[16px] font-light text-[#333] placeholder:font-light placeholder:text-[#c4c4c4] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
                <div>
                  <label class="block text-[16px] md:text-[17px] lg:text-[18px] font-normal text-[#212121] mb-1.5 md:mb-2">
                    Telepon
                  </label>
                  <input
                    type="tel"
                    id="telepon"
                    placeholder="0812 3456 7890"
                    class="w-full px-3 md:px-4 py-2.5 md:py-3 text-[15px] md:text-[16px] font-light text-[#333] placeholder:font-light placeholder:text-[#c4c4c4] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
              </div>

              <div>
                <label class="block text-[16px] md:text-[17px] lg:text-[18px] font-normal text-[#212121] mb-1.5 md:mb-2">
                  Lokasi Proyek/Alamat
                </label>
                <input
                  type="text"
                  id="lokasi"
                  placeholder="Perumahan Griya Asri Blok C2 No. 15, Depok"
                  class="w-full px-3 md:px-4 py-2.5 md:py-3 text-[15px] md:text-[16px] font-light text-[#333] placeholder:font-light placeholder:text-[#c4c4c4] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                />
              </div>

              <div>
                <label class="block text-[16px] md:text-[17px] lg:text-[18px] font-normal text-[#212121] mb-1.5 md:mb-2">
                  Pesan
                </label>
                <textarea
