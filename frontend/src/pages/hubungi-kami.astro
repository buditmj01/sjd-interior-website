---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import CTASection from '../components/common/CTASection.astro';
---

<BaseLayout
  title="Hubungi Kami - SJD Interior"
  description="Hubungi kami untuk konsultasi gratis proyek interior Anda"
>
  <Header />
  
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative pt-32 pb-16 md:pb-20 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <div class="text-center mb-12">
          <p class="text-[36px] font-light text-[#848484] mb-4" style="letter-spacing: -1.80px;">
            Hubungi Kami
          </p>
          <h1 class="text-[128px] font-light text-black" style="letter-spacing: -6.40px; line-height: 98.83%;">
            Wujudkan Interior Impian Anda
          </h1>
        </div>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="py-12 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-[60px]">
          <!-- Contact Form -->
          <div>
            <h2 class="text-[40px] font-light text-black mb-3" style="letter-spacing: -2px;">
              Mulai Proyek Anda
            </h2>
            <p class="text-[18px] font-light text-[#636363] mb-8">
              Isi form di bawah ini dan tim kami akan segera menghubungi Anda.
            </p>
            <form class="space-y-5">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-[18px] font-normal text-[#212121] mb-2">
                    Nama Awal
                  </label>
                  <input
                    type="text"
                    placeholder="Jane"
                    class="w-full px-4 py-3 text-[16px] font-medium text-[#636363] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
                <div>
                  <label class="block text-[18px] font-normal text-[#212121] mb-2">
                    Nama Akhir
                  </label>
                  <input
                    type="text"
                    placeholder="Smith"
                    class="w-full px-4 py-3 text-[16px] font-medium text-[#636363] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
              </div>

              <div>
                <label class="block text-[18px] font-normal text-[#212121] mb-2">
                  Estimasi Budget
                </label>
                <input
                  type="text"
                  placeholder="Rp0"
                  class="w-full px-4 py-3 text-[16px] font-medium text-[#636363] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                />
              </div>

              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-[18px] font-normal text-[#212121] mb-2">
                    Kapan Ingin Mulai
                  </label>
                  <input
                    type="date"
                    placeholder="dd/mm/yyyy"
                    class="w-full px-4 py-3 text-[16px] font-medium text-[#636363] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
                <div>
                  <label class="block text-[18px] font-normal text-[#212121] mb-2">
                    Telepon
                  </label>
                  <input
                    type="tel"
                    placeholder="+62 890 0000 000"
                    class="w-full px-4 py-3 text-[16px] font-medium text-[#636363] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                  />
                </div>
              </div>

              <div>
                <label class="block text-[18px] font-normal text-[#212121] mb-2">
                  Lokasi Proyek/Alamat
                </label>
                <input
                  type="text"
                  placeholder="Jl. Anggrek 3 No. 40, Bogor, Indonesia."
                  class="w-full px-4 py-3 text-[16px] font-medium text-[#636363] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black"
                />
              </div>

              <div>
                <label class="block text-[18px] font-normal text-[#212121] mb-2">
                  Pesan
                </label>
                <textarea
                  rows="3"
                  placeholder="My message is..."
                  class="w-full px-4 py-3 text-[16px] font-medium text-[#636363] bg-[#f4f4f4] border border-[#949494] rounded-[8px] focus:outline-none focus:border-black focus:ring-1 focus:ring-black resize-none"
                ></textarea>
              </div>

              <a
                href="https://wa.me/6285398989810?text=Nama%3A%20[Nama%20Anda]%0AEstimasi%20Budget%3A%20[Budget]%0AKapan%20Ingin%20Mulai%3A%20[Tanggal]%0ATelepon%3A%20[Nomor%20Telepon]%0ALokasi%3A%20[Lokasi]%0APesan%3A%20[Pesan%20Anda]"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-full px-6 py-3 text-[16px] font-medium text-white bg-black rounded-full hover:bg-[#272727] transition-all duration-200"
              >
                Konsultasi via Whatsapp
              </a>
            </form>
          </div>

          <!-- Contact Info -->
          <div>
            <div class="border-l border-black pl-10">
              <h2 class="text-[40px] font-light text-black mb-3" style="letter-spacing: -2px;">
                Informasi Kontak
              </h2>
              <p class="text-[18px] font-light text-[#636363] mb-8">
                Hubungi kami melalui salah satu cara di bawah ini.
              </p>

              <div class="space-y-6 mb-10">
                <!-- Phone -->
                <a href="tel:+6285398989810" class="flex items-start gap-4 group">
                  <svg class="w-6 h-6 mt-0.5 flex-shrink-0 text-black group-hover:text-[#0096f7] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <div>
                    <p class="text-[14px] font-medium text-[#888888] uppercase tracking-wider mb-1">Telepon</p>
                    <p class="text-[18px] font-light text-black group-hover:text-[#0096f7] transition-colors">
                      +62 853-9898-9810
                    </p>
                  </div>
                </a>

                <!-- Email -->
                <a href="mailto:hello@sjdinterior.com" class="flex items-start gap-4 group">
                  <svg class="w-6 h-6 mt-0.5 flex-shrink-0 text-black group-hover:text-[#0096f7] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <div>
                    <p class="text-[14px] font-medium text-[#888888] uppercase tracking-wider mb-1">Email</p>
                    <p class="text-[18px] font-light text-black group-hover:text-[#0096f7] transition-colors">
                      hello@sjdinterior.com
                    </p>
                  </div>
                </a>

                <!-- Address -->
                <div class="flex items-start gap-4">
                  <svg class="w-6 h-6 mt-0.5 flex-shrink-0 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <div>
                    <p class="text-[14px] font-medium text-[#888888] uppercase tracking-wider mb-1">Alamat</p>
                    <p class="text-[18px] font-light text-black leading-relaxed">
                      Jl. Raya Bogor KM 30<br/>Cimanggis, Depok 16451
                    </p>
                  </div>
                </div>

                <!-- Working Hours -->
                <div class="flex items-start gap-4">
                  <svg class="w-6 h-6 mt-0.5 flex-shrink-0 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <div>
                    <p class="text-[14px] font-medium text-[#888888] uppercase tracking-wider mb-1">Jam Operasional</p>
                    <p class="text-[18px] font-light text-black leading-relaxed">
                      Senin - Sabtu: 09:00 - 18:00<br/>Minggu: Tutup
                    </p>
                  </div>
                </div>

                <!-- Social Media -->
                <div class="flex items-start gap-4">
                  <svg class="w-6 h-6 mt-0.5 flex-shrink-0 text-black" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                  <div>
                    <p class="text-[14px] font-medium text-[#888888] uppercase tracking-wider mb-1">Social Media</p>
                    <div class="flex items-center gap-4">
                      <a href="https://instagram.com/sjdinterior" target="_blank" rel="noopener noreferrer" class="text-[16px] font-light text-black hover:text-[#0096f7] transition-colors">
                        Instagram
                      </a>
                      <a href="https://tiktok.com/@sjdinterior" target="_blank" rel="noopener noreferrer" class="text-[16px] font-light text-black hover:text-[#0096f7] transition-colors">
                        TikTok
                      </a>
                      <a href="https://youtube.com/@sjdinterior" target="_blank" rel="noopener noreferrer" class="text-[16px] font-light text-black hover:text-[#0096f7] transition-colors">
                        YouTube
                      </a>
                    </div>
                  </div>
                </div>
              </div>

              <div>
                <h3 class="text-[24px] font-light text-black mb-4" style="letter-spacing: -1.2px;">
                  Lokasi Kami
                </h3>
                <iframe
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3965.2!2d106.85!3d-6.37!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNsKwMjInMTIuMCJTIDEwNsKwNTEnMDAuMCJF!5e0!3m2!1sen!2sid!4v1234567890"
                  width="100%"
                  height="250"
                  style="border:0; border-radius: 12px;"
                  allowFullScreen=""
                  loading="lazy"
                  class="shadow-sm"
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTASection />
  </main>

  <Footer />
</BaseLayout>
