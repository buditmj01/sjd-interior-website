        </div>
      </div>
    </section>

  </main>

  <Footer />
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');
    const budgetInput = document.getElementById('budget') as HTMLInputElement;

    // Format number to Rupiah
    function formatRupiah(value: string): string {
      // Remove non-numeric characters
      const number = value.replace(/\D/g, '');
      if (!number) return '';

      // Format with thousand separators
      const formatted = new Intl.NumberFormat('id-ID').format(parseInt(number));
      return `Rp ${formatted}`;
    }

    // Auto format budget input
    budgetInput?.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      const cursorPosition = target.selectionStart || 0;
      const oldLength = target.value.length;

      target.value = formatRupiah(target.value);

      // Adjust cursor position
      const newLength = target.value.length;
      const newPosition = cursorPosition + (newLength - oldLength);
      target.setSelectionRange(newPosition, newPosition);
    });

    form?.addEventListener('submit', (e) => {
      e.preventDefault();

      // Get WhatsApp number from button data attribute
      const whatsappBtn = document.getElementById('whatsapp-btn') as HTMLButtonElement;
      const whatsappNumber = whatsappBtn?.dataset.whatsappNumber || '6285398989810';

      // Get form values
      const namaAwal = (document.getElementById('nama-awal') as HTMLInputElement)?.value.trim() || '';
      const namaAkhir = (document.getElementById('nama-akhir') as HTMLInputElement)?.value.trim() || '';
      const budget = (document.getElementById('budget') as HTMLInputElement)?.value.trim() || '';
      const tanggalMulai = (document.getElementById('tanggal-mulai') as HTMLInputElement)?.value || '';
      const telepon = (document.getElementById('telepon') as HTMLInputElement)?.value.trim() || '';
      const lokasi = (document.getElementById('lokasi') as HTMLInputElement)?.value.trim() || '';
      const pesan = (document.getElementById('pesan') as HTMLTextAreaElement)?.value.trim() || '';

      // Validation - all fields required except namaAkhir
      const requiredFields = [
        { value: namaAwal, name: 'Nama Awal' },
        { value: budget, name: 'Estimasi Budget' },
        { value: tanggalMulai, name: 'Kapan Ingin Mulai' },
        { value: telepon, name: 'Telepon' },
        { value: lokasi, name: 'Lokasi Proyek' },
        { value: pesan, name: 'Pesan' }
      ];

      const emptyFields = requiredFields.filter(field => !field.value);

      if (emptyFields.length > 0) {
        const fieldNames = emptyFields.map(f => f.name).join(', ');
        alert(`Mohon lengkapi field berikut: ${fieldNames}`);
        return;
      }

      // Format date if provided
      let formattedDate = tanggalMulai;
      if (tanggalMulai) {
        const date = new Date(tanggalMulai);
        formattedDate = date.toLocaleDateString('id-ID', {
          day: 'numeric',
          month: 'long',
          year: 'numeric'
        });
      }

      // Build WhatsApp message
      const fullName = namaAkhir ? `${namaAwal} ${namaAkhir}` : namaAwal;
      let message = `Halo SJD Interior,\n\nSaya ingin berkonsultasi mengenai proyek interior.\n\n`;
      message += `*Data Klien:*\n`;
      message += `Nama: ${fullName}\n`;
      message += `Telepon: ${telepon}\n`;
      message += `Lokasi Proyek: ${lokasi}\n\n`;
      message += `*Detail Proyek:*\n`;
      message += `Estimasi Budget: ${budget}\n`;
      message += `Rencana Mulai: ${formattedDate}\n\n`;
      message += `*Pesan:*\n${pesan}\n\n`;
      message += `Terima kasih.`;

      // Encode message for URL
      const encodedMessage = encodeURIComponent(message);

      // Open WhatsApp with number from Strapi
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
      window.open(whatsappUrl, '_blank');
    });
  });
</script>
