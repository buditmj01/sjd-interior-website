---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import CTASection from '../components/common/CTASection.astro';
import InsightCard from '../components/common/InsightCard.astro';
import PortfolioCard from '../components/common/PortfolioCard.astro';

// Mock data for insights
const insights = [
  {
    title: "8 Konsep Desain Interior yang Akan Tren di 2026",
    author: "Nurhanif Kamal Putra",
    date: "8 Januari 2026",
    category: "NEWS",
    image: "/images/insight-card.jpg",
    slug: "8-konsep-desain-interior-2026"
  },
  {
    title: "8 Konsep Desain Interior yang Akan Tren di 2026",
    author: "Nurhanif Kamal Putra",
    date: "8 Januari 2026",
    category: "NEWS",
    image: "/images/insight-card.jpg",
    slug: "8-konsep-desain-interior-2026"
  },
  {
    title: "8 Konsep Desain Interior yang Akan Tren di 2026",
    author: "Nurhanif Kamal Putra",
    date: "8 Januari 2026",
    category: "NEWS",
    image: "/images/insight-card.jpg",
    slug: "8-konsep-desain-interior-2026"
  }
];

// Portfolio items
const portfolios = [
  { title: "Modern Tropical House", category: "RUMAH TINGGAL", location: "Jakarta Selatan", area: "350 m²", style: "Modern Minimalis", image: "/images/portfolio-main.png", slug: "modern-tropical-house" },
  { title: "Cozy Apartment Living", category: "APARTEMEN", location: "BSD City", area: "120 m²", style: "Scandinavian", image: "/images/portfolio-2.png", slug: "cozy-apartment-living" },
  { title: "Industrial Cafe Design", category: "KOMERSIAL", location: "Bogor", area: "200 m²", style: "Industrial", image: "/images/portfolio-3.png", slug: "industrial-cafe-design" },
  { title: "Modern Office Space", category: "KANTOR", location: "Jakarta Pusat", area: "500 m²", style: "Contemporary", image: "/images/portfolio-4.png", slug: "modern-office-space" }
];

// Stats data
const stats = [
  { number: "100+", label: "Proyek Selesai" },
  { number: "7+", label: "Tahun Pengalaman" },
  { number: "98%", label: "Klien Puas" },
  { number: "25+", label: "Kota di Indonesia" }
];

// Features data
const features = [
  { icon: "/icons/chat.svg", title: "Konsultasi" },
  { icon: "/icons/3d-modeling.svg", title: "Gambar 3D Modelling" },
  { icon: "/icons/quality-control.svg", title: "Quality Control" },
  { icon: "/icons/budget.svg", title: "Rencana Anggaran Biaya" },
  { icon: "/icons/technical-drawing.svg", title: "Gambar Teknis Arsitektur" },
  { icon: "/icons/warranty.svg", title: "Garansi" }
];

// Process steps
const processSteps = [
  { number: "01", title: "Konsultasi", description: "Ceritakan kebutuhan dan gaya yang Anda inginkan. Kami dengarkan, kami pahami.", image: "/images/workflow-consult.jpg" },
  { number: "02", title: "Desain & RAB", description: "Tim kami membuat konsep dan visualisasi 3D. Revisi sampai 3x.", image: "/images/process-design.jpg" },
  { number: "03", title: "Produksi", description: "Kami produksi furniture dan siapkan material. Anda tinggal menunggu.", image: "/images/process-production.png" },
  { number: "04", title: "Serah terima", description: "Instalasi selesai, quality check done. Interior impian Anda siap dinikmati.", image: "/images/process-handover.jpg" }
];

// Testimonials
const testimonials = [
  { name: "Pak Budi", role: "Pemilik Rumah", text: "Pelayanan sangat memuaskan, hasil sesuai ekspektasi.", avatar: "/images/avatar-1.svg" },
  { name: "Ibu Sarah", role: "Pengusaha Cafe", text: "Tim SJD sangat profesional dan responsif.", avatar: "/images/avatar-2.svg" },
  { name: "Pak Andi", role: "Pemilik Kantor", text: "Desain modern dan berkelas, sangat puas.", avatar: "/images/avatar-3.svg" }
];
---

<BaseLayout
  title="SJD Interior - Semua Berawal Dari Rumah"
  description="SJD Interior adalah solusi desain lengkap personal dan tanpa ribet"
>
  <Header />

  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative h-screen min-h-[800px] flex items-center overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img
          src="/images/hero-background.jpg"
          alt="Modern interior design"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-transparent"></div>
      </div>

      <!-- Content -->
      <div class="w-full max-w-[1761px] mx-auto px-[151px] relative z-10">
        <div class="max-w-[800px]">
          <h1 class="text-white mb-10">
            <span class="block text-[115.56px] font-light leading-[0.95]" style="letter-spacing: -5.78px;">
              Semua Berawal
            </span>
            <span class="block text-[115.56px] font-light leading-[0.95]" style="letter-spacing: -5.78px;">
              Dari Rumah.
            </span>
          </h1>

          <a
            href="https://wa.me/6285398989810?text=Halo%20SJD%20Interior%2C%20saya%20ingin%20berkonsultasi%20tentang%20proyek%20interior%20saya."
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-10 py-4 text-[22.83px] font-medium text-white bg-transparent border-2 border-white rounded-full hover:bg-white hover:text-black transition-all duration-300"
          >
            Mulai Konsultasi
          </a>
        </div>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="py-20 bg-gradient-to-b from-white via-[#fff7ee] to-[#fff7ee]">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <!-- Title - Left aligned -->
        <div class="mb-16">
          <h2 class="text-left">
            <span class="block text-[96px] font-light text-black leading-[1.05]" style="letter-spacing: -4.8px;">SJD Interior adalah</span>
            <span class="block text-[96px] font-light text-black leading-[1.05]" style="letter-spacing: -4.8px;">solusi desain lengkap</span>
            <span class="block text-[96px] font-light text-black leading-[1.05]" style="letter-spacing: -4.8px;">personal dan tanpa</span>
            <span class="block text-[96px] font-light text-black leading-[1.05]" style="letter-spacing: -4.8px;">ribet.</span>
          </h2>

          <!-- Subtitle - Left aligned with proper spacing -->
          <p class="text-[36px] font-light text-black mt-8 leading-[1.3]" style="letter-spacing: -1.80px;">
            Kami handle semuanya, dari desain hingga furniture.<br />
            Tersedia sekarang di Jabodetabek.
          </p>
        </div>

        <!-- Portfolio Grid - 4 columns -->
        <div class="grid grid-cols-4 gap-5 mb-8">
          {portfolios.map((item) => (
            <PortfolioCard {...item} />
          ))}
        </div>

        <!-- CTA Link - Below portfolio cards -->
        <a href="/portfolio" class="inline-flex items-center gap-2 text-[20px] font-light text-black hover:gap-4 transition-all duration-300 group">
          Mau lihat hasil kerja kami? Jelajahi portfolio
          <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="relative py-20 overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img
          src="/images/stats-background.png"
          alt=""
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>

      <div class="w-full max-w-[1761px] mx-auto px-[151px] relative z-10">
        <!-- Title -->
        <h2 class="text-center mb-4">
          <span class="block text-[70px] font-light text-white leading-[1.1]" style="letter-spacing: -3.50px;">
            Rumah. Komersial. Kantor. Semua bisa.
          </span>
          <span class="block text-[70px] font-light text-white leading-[1.1]" style="letter-spacing: -3.50px;">
            Maksimalkan setiap meter ruang Anda.
          </span>
        </h2>

        <!-- Stats Grid -->
        <div class="grid grid-cols-4 gap-6 mt-16">
          {stats.map((stat) => (
            <div class="bg-transparent border border-white rounded-[35px] py-10 px-8 text-center">
              <div class="text-[79px] font-light text-white leading-none mb-2" style="letter-spacing: -3.95px;">
                {stat.number}
              </div>
              <div class="text-[28px] font-light text-white" style="letter-spacing: -1.40px;">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gradient-to-b from-[#fff7ee] to-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <h2 class="text-[70px] font-light text-black text-center mb-16" style="letter-spacing: -3.50px;">
          Fasilitas yang anda dapatkan.
        </h2>

        <div class="grid grid-cols-3 gap-x-6 gap-y-12">
          {features.map((feature) => (
            <div class="text-center">
              <div class="w-[100px] h-[100px] mx-auto mb-6 flex items-center justify-center">
                <img
                  src={feature.icon}
                  alt={feature.title}
                  class="w-full h-full object-contain"
                />
              </div>
              <h3 class="text-[29.13px] font-light text-[#313131]" style="letter-spacing: -1.46px;">
                {feature.title}
              </h3>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <h2 class="text-[70px] font-light text-black text-center mb-16" style="letter-spacing: -3.50px;">
          Apa kata mereka tentang SJD Interior
        </h2>

        <!-- Testimonials Carousel Container -->
        <div class="relative">
          <div class="flex gap-6 overflow-x-auto scrollbar-hide pb-4">
            {testimonials.map((testimonial) => (
              <div class="flex-shrink-0 w-[400px] bg-[#f8f8f8] rounded-[24px] p-8">
                <div class="flex items-center gap-4 mb-6">
                  <img
                    src={testimonial.avatar}
                    alt={testimonial.name}
                    class="w-16 h-16 rounded-full object-cover"
                  />
                  <div>
                    <p class="text-[20px] font-medium text-black">{testimonial.name}</p>
                    <p class="text-[16px] font-light text-[#757575]">{testimonial.role}</p>
                  </div>
                </div>
                <p class="text-[18px] font-light text-[#424242] leading-relaxed">
                  "{testimonial.text}"
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Process Steps Section -->
    <section class="py-20 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <!-- Title -->
        <div class="text-center mb-16">
          <h2 class="text-[53.13px] font-light text-black mb-2" style="letter-spacing: -2.66px;">
            Dapatkan interior impian dalam empat langkah.
          </h2>
          <p class="text-[53.13px] font-light text-[#a7a7a7]" style="letter-spacing: -2.66px;">
            Secepat 2-8 minggu pengerjaan.
          </p>
        </div>

        <!-- Steps Grid -->
        <div class="grid grid-cols-4 gap-6 mb-16">
          {processSteps.map((step) => (
            <div class="text-center">
              <p class="text-[24px] font-light text-[#c4c4c4] mb-4" style="letter-spacing: -1.20px;">
                {step.number}
              </p>
              <h3 class="text-[32px] font-light text-black mb-4" style="letter-spacing: -1.60px;">
                {step.title}
              </h3>
              <p class="text-[20px] font-normal text-[#929292] leading-[1.4] mb-6" style="letter-spacing: -1px;">
                {step.description}
              </p>
              <img
                src={step.image}
                alt={step.title}
                class="w-full aspect-[1/1] object-cover rounded-[24px]"
              />
            </div>
          ))}
        </div>

        <!-- CTA -->
        <div class="text-center">
          <p class="text-[46.21px] font-light text-black mb-2" style="letter-spacing: -2.31px;">
            Mau tahu lebih detail?
          </p>
          <p class="text-[46.21px] font-light text-[#919191] mb-10" style="letter-spacing: -2.31px;">
            Pelajari proses kerja kami dari awal sampai akhir.
          </p>
          <div class="flex justify-center gap-4">
            <a
              href="/alur-kerja"
              class="inline-flex items-center justify-center px-10 py-4 text-[21.41px] font-medium text-[#424242] border-2 border-[#424242] rounded-full hover:bg-[#424242] hover:text-white transition-all duration-300"
            >
              Cara Kerja
            </a>
            <a
              href="https://wa.me/6285398989810?text=Halo%20SJD%20Interior%2C%20saya%20ingin%20berkonsultasi."
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-10 py-4 text-[21.41px] font-medium text-white bg-[#424242] rounded-full hover:bg-black transition-all duration-300"
            >
              Konsultasi
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Insight Section -->
    <section class="py-20 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <h2 class="text-[103.13px] font-light text-black text-center mb-16" style="letter-spacing: -5.16px;">
          Insight untuk anda.
        </h2>

        <div class="grid grid-cols-3 gap-6 mb-12">
          {insights.map((insight) => (
            <InsightCard {...insight} />
          ))}
        </div>

        <div class="text-center">
          <a
            href="/insight"
            class="inline-flex items-center justify-center px-10 py-4 text-[21.41px] font-medium text-[#424242] border-2 border-[#424242] rounded-full hover:bg-[#424242] hover:text-white transition-all duration-300"
          >
            Lihat Selengkapnya
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTASection />
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
</style>
