---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import CTASection from '../components/common/CTASection.astro';
import FAQSection from '../components/common/FAQSection.astro';
import TestimonialsSection from '../components/common/TestimonialsSection.astro';
import InsightCard from '../components/common/InsightCard.astro';
import PortfolioCard from '../components/common/PortfolioCard.astro';

// Mock data for demonstration
const insights = [
  {
    title: "8 Konsep Desain Interior yang Akan Tren di 2026",
    author: "Nurhanif Kamal Putra",
    date: "8 Januari 2026",
    category: "NEWS",
    image: "/images/insight-card.jpg",
    slug: "8-konsep-desain-interior-2026"
  },
  {
    title: "8 Konsep Desain Interior yang Akan Tren di 2026",
    author: "Nurhanif Kamal Putra",
    date: "8 Januari 2026",
    category: "NEWS",
    image: "/images/insight-card.jpg",
    slug: "8-konsep-desain-interior-2026"
  },
  {
    title: "8 Konsep Desain Interior yang Akan Tren di 2026",
    author: "Nurhanif Kamal Putra",
    date: "8 Januari 2026",
    category: "NEWS",
    image: "/images/insight-card.jpg",
    slug: "8-konsep-desain-interior-2026"
  }
];
---

<BaseLayout
  title="SJD Interior - Semua Berawal Dari Rumah"
  description="SJD Interior adalah solusi desain lengkap personal dan tanpa ribet"
>
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center overflow-hidden">
      <div class="absolute inset-0 z-0">
        <img
          src="/images/hero-background.jpg"
          alt="Modern interior design"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-[#131313]/90 via-[#131313]/60 to-transparent"></div>
      </div>

      <div class="w-full max-w-[1761px] mx-auto px-[151px] relative z-10 pt-32 pb-16">
        <div class="max-w-4xl">
          <h1 class="text-white mb-12">
            <div class="text-[clamp(3rem,10vw,115.56px)] font-light leading-[1.1]" style="letter-spacing: -5.78px;">
              Semua Berawal
            </div>
            <div class="text-[clamp(3rem,10vw,115.56px)] font-light leading-[1.1]" style="letter-spacing: -5.78px;">
              Dari Rumah.
            </div>
          </h1>

          <a
            href="https://wa.me/6285398989810?text=Halo%20SJD%20Interior%2C%20saya%20ingin%20berkonsultasi%20tentang%20proyek%20interior%20saya."
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-10 py-3 text-[22.83px] font-medium text-white bg-transparent border-2 border-white rounded-full hover:bg-white hover:text-black transition-all duration-300"
          >
            Mulai Konsultasi
          </a>
        </div>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="relative bg-gradient-to-b from-white via-[#fff7ee] to-[#fff7ee] py-12 md:py-16">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <h2 class="text-center mb-16 font-[Lexend]">
          <span class="block text-[96px] font-light text-black" style="letter-spacing: -4.8px; line-height: 1;">SJD Interior</span>
          <span class="block text-[96px] font-light text-black" style="letter-spacing: -4.8px; line-height: 1;">adalah</span>
          <span class="block text-[96px] font-light text-black" style="letter-spacing: -4.8px; line-height: 1;">solusi desain lengkap</span>
          <span class="block text-[96px] font-light text-black" style="letter-spacing: -4.8px; line-height: 1;">personal</span>
          <span class="block text-[96px] font-light text-black" style="letter-spacing: -4.8px; line-height: 1;">dan tanpa</span>
          <span class="block text-[96px] font-light text-black" style="letter-spacing: -4.8px; line-height: 1;">ribet.</span>
        </h2>

        <!-- Portfolio Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {[1, 2, 3, 4].map((item) => (
            <div class="relative group rounded-[12px] overflow-hidden border border-[#e5e5e5] aspect-[4/5] bg-gradient-to-b from-[#151515] to-transparent hover:shadow-lg transition-shadow duration-300">
              <img
                src={`/images/portfolio-${item === 1 ? 'main' : item}.png`}
                alt="Portfolio project"
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-black/20 group-hover:from-black/80 group-hover:to-black/30 transition-all"></div>
              <div class="absolute inset-0 flex flex-col items-center justify-center text-center p-6 z-10">
                <h3 class="text-white text-[35px] font-light mb-2" style="letter-spacing: -1.75px; opacity: 0.9;">
                  Judul Portfolio<br />Lorem Ipsum
                </h3>
                <p class="text-white/80 text-[15px] font-light mb-6" style="letter-spacing: -0.75px;">
                  Nama Kategori
                </p>
                <button class="px-8 py-3 text-[22.83px] font-medium text-white bg-transparent border-2 border-white rounded-full hover:bg-white hover:text-black transition-all duration-300">
                  Lihat Project
                </button>
              </div>
            </div>
          ))}
        </div>

        <p class="text-center text-[36px] font-light text-black mb-4" style="letter-spacing: -1.80px;">
          Kami handle semuanya, dari desain hingga furniture. <br />Tersedia sekarang di Jabodetabek.
        </p>

        <p class="text-center">
          <a href="/portfolio" class="text-[20px] font-light text-black hover:underline">
            Mau lihat hasil kerja kami? Jelajahi portfolio â†’
          </a>
        </p>
      </div>
    </section>

    <!-- Stats Section -->
    <section
      class="relative py-12 md:py-16 bg-cover bg-center"
      style="background-image: url('/images/stats-background.png')"
    >
      <div class="absolute inset-0 bg-black/40"></div>

      <div class="w-full max-w-[1761px] mx-auto px-[151px] relative z-10">
        <h2 class="text-center mb-8">
          <div class="text-[clamp(2.5rem,6vw,70px)] font-light text-white leading-tight" style="letter-spacing: -3.50px;">
            Rumah. Komersial. Kantor. Semua bisa.
          </div>
          <div class="text-[clamp(2.5rem,6vw,70px)] font-light text-white leading-tight" style="letter-spacing: -3.50px;">
            Maksimalkan setiap meter ruang Anda.
          </div>
        </h2>

        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mt-12">
          {[
            { number: "100+", label: "Proyek Selesai" },
            { number: "7+", label: "Tahun Pengalaman" },
            { number: "98%", label: "Klien Puas" },
            { number: "25+", label: "Kota di Indonesia" }
          ].map((stat) => (
            <div class="bg-transparent border border-white rounded-[35px] p-8 text-center shadow-[0px_4px_4px_rgba(0,0,0,0.25)]">
              <div class="text-[clamp(3rem,7vw,79px)] font-light text-white mb-2" style="letter-spacing: -3.95px;">
                {stat.number}
              </div>
              <div class="text-[28px] font-light text-white" style="letter-spacing: -1.40px;">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="relative bg-gradient-to-b from-[#fff7ee] to-white py-12 md:py-16">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <h2 class="text-[clamp(2.5rem,6vw,70px)] font-light text-black text-center mb-16" style="letter-spacing: -3.50px;">
          Fasilitas yang anda dapatkan.
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
          {[
            { icon: "/icons/chat.svg", title: "Konsultasi" },
            { icon: "/icons/3d-modeling.svg", title: "Gambar 3D Modelling" },
            { icon: "/icons/quality-control.svg", title: "Quality Control" },
            { icon: "/icons/budget.svg", title: "Rencana Anggaran Biaya" },
            { icon: "/icons/technical-drawing.svg", title: "Gambar Teknis Arsitektur" },
            { icon: "/icons/warranty.svg", title: "Garansi" }
          ].map((feature) => (
            <div class="text-center">
              <img
                src={feature.icon}
                alt={feature.title}
                class="w-20 h-20 mx-auto mb-4"
              />
              <h3 class="text-[29.13px] font-light text-[#313131]" style="letter-spacing: -1.46px;">
                {feature.title}
              </h3>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <TestimonialsSection />

    <!-- Process Steps -->
    <section class="py-12 md:py-16 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <div class="text-center mb-12">
          <h2 class="text-[clamp(2.5rem,5.5vw,53.13px)] font-light text-black mb-4" style="letter-spacing: -2.66px;">
            Dapatkan interior impian dalam empat langkah.
          </h2>
          <p class="text-[clamp(2.5rem,5.5vw,53.13px)] font-light text-[#a7a7a7]" style="letter-spacing: -2.66px;">
            Secepat 2-8 minggu pengerjaan.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          {[
            { number: "01", title: "Konsultasi", description: "Ceritakan kebutuhan dan gaya yang Anda inginkan. Kami dengarkan, kami pahami.", image: "/images/workflow-consult.jpg" },
            { number: "02", title: "Desain & RAB", description: "Tim kami membuat konsep dan visualisasi 3D. Revisi sampai 3x.", image: "/images/process-design.jpg" },
            { number: "03", title: "Produksi", description: "Kami produksi furniture dan siapkan material. Anda tinggal menunggu.", image: "/images/process-production.png" },
            { number: "04", title: "Serah terima", description: "Instalasi selesai, quality check done. Interior impian Anda siap dinikmati.", image: "/images/process-handover.jpg" }
          ].map((step) => (
            <div class="text-center">
              <p class="text-[24px] font-light text-white mb-4" style="letter-spacing: -1.20px;">
                {step.number}
              </p>
              <h3 class="text-[32px] font-light text-black mb-4" style="letter-spacing: -1.60px;">
                {step.title}
              </h3>
              <p class="text-[20px] font-normal text-[#929292] leading-[28px] mb-6" style="letter-spacing: -1px;">
                {step.description}
              </p>
              <img
                src={step.image}
                alt={step.title}
                class="w-full h-auto rounded-[24px] mx-auto"
              />
            </div>
          ))}
        </div>

        <div class="text-center mt-12">
          <p class="text-[clamp(2rem,4.8vw,46.21px)] font-light text-black mb-2" style="letter-spacing: -2.31px;">
            Mau tahu lebih detail?
          </p>
          <p class="text-[clamp(2rem,4.8vw,46.21px)] font-light text-[#919191] mb-8" style="letter-spacing: -2.31px;">
            Pelajari proses kerja kami dari awal sampai akhir.
          </p>
          <div class="flex justify-center gap-4">
            <a
              href="/alur-kerja"
              class="inline-flex items-center justify-center px-8 py-3 text-[21.41px] font-medium text-[#424242] border-2 border-[#424242] rounded-full hover:bg-[#424242] hover:text-white transition-all duration-300"
            >
              Cara Kerja
            </a>
            <a
              href="/hubungi-kami"
              class="inline-flex items-center justify-center px-8 py-3 text-[21.41px] font-medium text-white bg-[#424242] rounded-full hover:bg-black transition-all duration-300"
            >
              Konsultasi
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Insights Section -->
    <section class="py-12 md:py-16 bg-white">
      <div class="w-full max-w-[1761px] mx-auto px-[151px]">
        <h2 class="text-[clamp(3.5rem,10vw,103.13px)] font-light text-black text-center mb-12" style="letter-spacing: -5.16px;">
          Insight untuk anda.
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          {insights.map((insight) => (
            <InsightCard {...insight} />
          ))}
        </div>

        <div class="text-center">
          <a
            href="/insight"
            class="inline-flex items-center justify-center px-8 py-3 text-[21.41px] font-medium text-[#424242] border-2 border-[#424242] rounded-full hover:bg-[#424242] hover:text-white transition-all duration-300"
          >
            Lihat Selengkapnya
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTASection />
  </main>

  <Footer />
</BaseLayout>
